@model GestVeicular.Models.Veiculo

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/VeiculoRegister.css" />

<div class="register-page">
    <div class="register-container register-card">
        <a asp-action="Index" class="btn-voltar"><i class="fas fa-arrow-left"></i> Voltar</a>

        <h2><i class="fas fa-car"></i> Detalhes do Veículo</h2>

        <div class="form-group">
            <label><strong>Nome do Veículo:</strong></label>
            <div>@Model.NomeVeiculo</div>
        </div>

        <div class="form-group">
            <label><strong>Placa:</strong></label>
            <div>@Model.Placa</div>
        </div>

        <div class="form-group">
            <label><strong>Marca:</strong></label>
            <div>@Model.Marca</div>
        </div>

        <div class="form-group">
            <label><strong>Modelo:</strong></label>
            <div>@Model.Modelo</div>
        </div>

        <div class="form-group">
            <label><strong>Ano:</strong></label>
            <div>@Model.Ano</div>
        </div>

        <a asp-action="Editar" asp-route-id="@Model.IdVeiculo" class="btn-submit" style="text-align:center; display:block; margin-top: 24px;">
            <i class="fas fa-edit"></i> Editar
        </a>
    </div>
</div>
