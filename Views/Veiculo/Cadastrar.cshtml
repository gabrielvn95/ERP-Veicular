@model GestVeicular.Models.Veiculo

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/VeiculoRegister.css" />

<div class="register-page">
    <div class="register-container register-card">
        <a asp-action="Index" class="btn-voltar"><i class="fas fa-arrow-left"></i> Voltar</a>

        <h2><i class="fas fa-plus-circle"></i> Cadastro de Veículo</h2>

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert-custom alert-erro">
                @TempData["MensagemErro"]
            </div>
        }

        <form asp-controller="Veiculo" asp-action="Cadastrar" method="post">
            <div class="form-group">
                <input asp-for="NomeVeiculo" placeholder="Nome do veículo" />
                <span asp-validation-for="NomeVeiculo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Placa" placeholder="Placa" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Marca" placeholder="Marca" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Modelo" placeholder="Modelo" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Ano" type="number" placeholder="Ano" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-save"></i> Salvar
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
