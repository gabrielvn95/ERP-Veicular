@model IEnumerable<GestVeicular.Models.Veiculo>

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/Veiculo.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="painel-container">
    <div class="painel-header">
        <h2 class="painel-title"><i class="fas fa-car"></i> Painel de Veículos</h2>
        <a asp-action="Cadastrar" asp-controller="Veiculo" class="btn-login painel-btn">
            <i class="fas fa-plus"></i> Novo Veículo
        </a>
    </div>

    <div class="table-wrapper">
        <table id="veiculosTable" class="painel-table">
            <thead>
                <tr>
                    <th><i class="fas fa-car-side"></i> Nome</th>
                    <th><i class="fas fa-id-card"></i> Placa</th>
                    <th><i class="fas fa-industry"></i> Marca</th>
                    <th><i class="fas fa-car"></i> Modelo</th>
                    <th><i class="fas fa-calendar-alt"></i> Ano</th>
                    <th><i class="fas fa-tools"></i> Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var veiculo in Model)
                    {
                        <tr>
                            <td>@veiculo.NomeVeiculo</td>
                            <td>@veiculo.Placa</td>
                            <td>@veiculo.Marca</td>
                            <td>@veiculo.Modelo</td>
                            <td>@veiculo.Ano</td>
                            <td class="acoes-coluna">
                                <a asp-action="Editar" asp-controller="Veiculo" asp-route-id="@veiculo.IdVeiculo" class="btn-acao editar">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Deletar" asp-controller="Veiculo" asp-route-id="@veiculo.IdVeiculo" class="btn-acao excluir">
                                    <i class="fas fa-trash-alt"></i> Excluir
                                </a>
                                <a asp-action="Detalhes" asp-controller="Veiculo" asp-route-id="@veiculo.IdVeiculo" class="btn-acao detalhes">
                                    <i class="fas fa-eye"></i> Detalhes
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="~/js/veiculo.js"></script>
}
