@model GestVeicular.Models.Venda

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/VeiculoRegister.css" />

<div class="register-page">
    <div class="register-container register-card">
        <a asp-action="Index" class="btn-voltar"><i class="fas fa-arrow-left"></i> Voltar</a>

        <h2><i class="fas fa-car"></i> Detalhe da venda</h2>

        <div class="form-group">
            <label><strong>Nome do cliente:</strong></label>
            <div>@Model.Cliente.Nome</div>
        </div>

        <div class="form-group">
            <label><strong>Veiculo:</strong></label>
            <div>@Model.Veiculo.NomeVeiculo</div>
        </div>

        <div class="form-group">
            <label><strong>Placa:</strong></label>
            <div>@Model.Veiculo.Placa</div>
        </div>

        <div class="form-group">
            <label><strong>Valor da venda:</strong></label>
            <div>@Model.ValorDaVenda</div>
        </div>

        <div class="form-group">
            <label><strong>Inicio da venda:</strong></label>
            <div>@Model.DataUltimaAtualizacao.ToString("dd/MM/yyyy")</div>
        </div>

        <div class="form-group">
            <label><strong>Status:</strong></label>
            <div>@Model.Status</div>
        </div>

        <a asp-Controller="Venda" asp-action="Editar" asp-route-id="@Model.IdVenda" class="btn-submit" style="text-align:center; display:block; margin-top: 24px;">
            <i class="fas fa-edit"></i> Editar
        </a>
    </div>
</div>
