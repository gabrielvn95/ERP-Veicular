@model GestVeicular.Models.Venda

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/registerServicos.css" />

<div class="register-page">
    <div class="register-container register-card">
        <a asp-action="Index" class="btn-voltar">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>

        <h2><i class="fas fa-trash-alt"></i> Confirmar Exclusão</h2>

        <div class="alert-custom alert-erro">
            Tem certeza que deseja excluir esta venda?
        </div>

        <dl class="row">
            <dt class="col-sm-4">Cliente</dt>
            <dd class="col-sm-8">@Model.Cliente?.Nome</dd>

            <dt class="col-sm-4">Veículo</dt>
            <dd class="col-sm-8">@Model.Veiculo?.NomeVeiculo</dd>

            <dt class="col-sm-4">Valor da Venda</dt>
            <dd class="col-sm-8">@Model.ValorDaVenda.ToString("C")</dd>

            <dt class="col-sm-4">Data</dt>
            <dd class="col-sm-8">@Model.DataUltimaAtualizacao.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>
        </dl>

        <form asp-action="Deletar" method="post">
            <input type="hidden" asp-for="IdVenda" />

            <button type="submit" class="btn-submit">
                <i class="fas fa-trash"></i> Confirmar Exclusão
            </button>
        </form>
    </div>
</div>
