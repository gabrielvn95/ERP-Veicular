@model GestVeicular.DTO.UsuarioRegisterDto

@{
    ViewData["Title"] = "Cadastro de Usuário";
    Layout = null; // se quiser sem layout global
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro - GVN</title>
    <link rel="stylesheet" href="~/css/register.css" />
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="logo">GVN</div>
            <h2>Cadastro de Usuário</h2>
            <form asp-action="Registrar" method="post">
                <div class="form-group">
                    <input asp-for="Nome" class="form-control" placeholder="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Sobrenome" class="form-control" placeholder="Sobrenome" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Senha" type="password" class="form-control" placeholder="Senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmarSenha" type="password" class="form-control" placeholder="Confirmar Senha" />
                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select asp-for="TipoUsuario" asp-items="Html.GetEnumSelectList<GestVeicular.Enums.TipoUsuario>()" class="form-control">
                        <option value="">Tipo de Usuário</option>
                    </select>
                    <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-submit">Cadastrar</button>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
