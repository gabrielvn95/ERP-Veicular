@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/PainelUsuario.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="painel-container">

    <div class="painel-header">
        <h2 class="painel-title"><i class="fas fa-users-cog"></i> Painel de Controle de Usuários</h2>
        
        <a asp-action="Registrar" asp-controller="Login" class="btn-login painel-btn">
            <i class="fas fa-user-plus"></i> Novo Usuário
        </a>
    </div>

    <div class="table-wrapper">
        <table id="usuariosTable" class="painel-table">
            <thead>
                <tr>
                    <th><i class="fas fa-user"></i> Nome</th>
                    <th><i class="fas fa-envelope"></i> Email</th>
                    <th><i class="fas fa-user-tag"></i> Tipo</th>
                    <th><i class="fas fa-calendar-plus"></i> Data Cadastro</th>
                    <th><i class="fas fa-clock"></i> Último Acesso</th>
                    <th><i class="fas fa-tools"></i> Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.TipoUsuario</td>
                        <td>@usuario.DataCadastro.ToString("dd/MM/yyyy")</td>
                        <td>@(usuario.DataUltimoAcesso?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Usuario" asp-route-id="@usuario.IdUsuario" class="btn-acao editar">
                                <i class="fas fa-edit"></i> Editar
                            </a>

                            <a asp-action="Excluir" asp-controller="Usuario" asp-route-id="@usuario.IdUsuario" class="btn-acao excluir">
                                <i class="fas fa-trash-alt"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
