@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/painelUsuario.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />

<div class="painel-container">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert-custom alert-erro">
            @TempData["MensagemErro"]
        </div>
    }
    else if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert-custom alert-sucesso">
            @TempData["MensagemSucesso"]
        </div>
    }

    <div class="painel-header">
        <h2 class="painel-title">Painel de Controle de Usuários</h2>
        <a asp-action="Registrar" asp-controller="Login" class="btn-login painel-btn">+ Novo Usuário</a>
    </div>

    <div class="table-wrapper">
        <table id="usuariosTable" class="painel-table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Tipo</th>
                    <th>Data Cadastro</th>
                    <th>Último Acesso</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.TipoUsuario</td>
                        <td>@usuario.DataCadastro.ToString("dd/MM/yyyy")</td>
                        <td>@(usuario.DataUltimoAcesso?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@usuario.IdUsuario" class="btn-acao editar">Editar</a>
                            <a asp-action="DeletarConfirmacao" asp-route-id="@usuario.IdUsuario" class="btn-acao excluir">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
